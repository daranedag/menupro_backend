{
  "name": "menupro-backend",
  "version": "1.0.0",
  "description": "MenuPro API - Sistema de gestión de menús digitales con QR",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "test": "bun test",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "db:migrate": "bun run scripts/migrate.ts"
  },
  "keywords": [
    "menu",
    "qr",
    "restaurant",
    "supabase",
    "bun",
    "express"
  ],
  "author": "MenuPro",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.3",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "zod": "^3.22.4",
    "qrcode": "^1.5.3",
    "slugify": "^1.6.6",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/qrcode": "^1.5.5",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "bun-types": "latest"
  }
}
